<fw:AcrylicWindow
	x:Class="TRX.KeySystem"
	xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:TRX"
	fw:PointerTracker.Enabled="True"
	AcrylicWindowStyle="None"
	Enabled="True"
	ResizeMode="NoResize"
	WindowStyle="None"
	Topmost="True"
	WindowStartupLocation="CenterScreen"
	NoiseOpacity="0"
	Title="TRX"
	Height="350"
	Width="700.3"
	Background="#4C1D1D1D"
	MouseDown="AcrylicWindow_MouseDown">
	<Grid>
		<Image
			x:Name="logoImg"
			HorizontalAlignment="Left"
			Height="350"
			VerticalAlignment="Top"
			Width="350"
			Source="TRXLogos/TRX350.png"
			Margin="4,-9,0,0" />
		<Label
			x:Name="headerLbl"
			Content="Key System"
			HorizontalAlignment="Left"
			Margin="24,267,0,0"
			VerticalAlignment="Top"
			Foreground="#FFFFFFFF"
			FontFamily="Segoe UI Semibold"
			FontSize="18"
			Background="{x:Null}" />
		<Label
			x:Name="statusLbl"
			Content="Please enter your key"
			HorizontalAlignment="Left"
			Margin="24,301,0,0"
			VerticalAlignment="Top"
			Foreground="#FFDCD3D3"
			FontFamily="Segoe UI Semilight"
			FontSize="16"
			Background="{x:Null}" />
		<Button
			x:Name="getkeyBtn"
			Content="Get key"
			Style="{StaticResource ButtonRevealStyle}"
			Height="44"
			Margin="409,0,0,97"
			VerticalAlignment="Bottom"
			Width="251"
			Background="#33727272"
			BorderBrush="#FF616161"
			Foreground="#FFFFFFFF"
			HorizontalAlignment="Left"
			Click="getkeyBtn_Click" />
		<Button
			x:Name="okBtn"
			Content="OK"
			Style="{StaticResource ButtonRevealStyle}"
			Height="34"
			Margin="409,0,0,146"
			VerticalAlignment="Bottom"
			Width="251"
			Background="#33727272"
			BorderBrush="#FF616161"
			Foreground="#FFFFFFFF"
			HorizontalAlignment="Left"
			Click="okBtn_Click" />
		<PasswordBox
			x:Name="keyPb"
			Style="{StaticResource PasswordBoxRevealStyle}"
			HorizontalAlignment="Left"
			Margin="409,121,0,0"
			VerticalAlignment="Top"
			Width="251"
			Height="34"
			Background="#33727272"
			BorderBrush="#FF616161"
			Foreground="#FFFFFFFF" />
		<Label
			x:Name="keyLbl"
			Content="Key:"
			HorizontalAlignment="Left"
			Margin="408,89,0,0"
			VerticalAlignment="Top"
			Foreground="#FFDCD3D3"
			FontFamily="Segoe UI Semilight"
			FontSize="16"
			Background="{x:Null}" />
		<Button
			x:Name="exitBtn"
			Content="X"
			Style="{StaticResource ButtonRevealStyle}"
			Height="34"
			Margin="664,0,0,314"
			VerticalAlignment="Bottom"
			Width="34"
			BorderBrush="#FF616161"
			Foreground="#FFFFFFFF"
			HorizontalAlignment="Left"
			Background="{x:Null}"
			Click="exitBtn_Click" />
		<Button
			x:Name="minBtn"
			Content="_"
			Style="{StaticResource ButtonRevealStyle}"
			Height="34"
			Margin="630,0,0,314"
			VerticalAlignment="Bottom"
			Width="34"
			BorderBrush="#FF616161"
			Foreground="#FFFFFFFF"
			HorizontalAlignment="Left"
			Background="{x:Null}"
			Click="minBtn_Click" />
	</Grid>
</fw:AcrylicWindow>
